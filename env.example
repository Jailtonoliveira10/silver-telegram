# Configurações do Banco de Dados
DATABASE_URL=postgresql://usuario:senha@host:porta/banco_de_dados
# Exemplo: postgresql://myuser:mypass@aws.postgres.render.com/mydb

# Segurança e Autenticação
SESSION_SECRET=chave_secreta_gerada_com_openssl # Gerar com: openssl rand -hex 32
JWT_SECRET=chave_jwt_gerada_aleatoriamente     # Gerar com: openssl rand -hex 32

# API de Futebol
API_FOOTBALL_KEY=sua_chave_api_football_data   # Chave da Football-Data.org ou similar

# URL da Aplicação (para produção)
NEXT_PUBLIC_API_URL=https://seu-projeto.onrender.com # Substituir pela URL do Render

# Ambiente de Execução
NODE_ENV=production

# Configurações Opcionais de Notificação (Twilio)
TWILIO_ACCOUNT_SID=seu_account_sid_do_twilio
TWILIO_AUTH_TOKEN=seu_auth_token_do_twilio
TWILIO_PHONE_NUMBER=número_whatsapp_do_twilio # Exemplo: "+1234567890"

# Configurações de Debug (Opcionais)
DISABLE_RATE_LIMIT_FOR_TESTS=false # Desabilita limitador de requisições para testes
APP_URL=http://localhost:5000      # URL base para links em emails (sobrescrever em produção)
